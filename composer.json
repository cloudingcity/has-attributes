{
    "name": "clouding/has-attributes",
    "description": "A trait to give class attributes",
    "keywords": ["trait", "attribute"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Clouding",
            "email": "ghost0436@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2"
    },
    "require-dev": {
        "nunomaduro/collision": "^3.0",
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Clouding\\HasAttributes\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Clouding\\HasAttributes\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpcs"
        ],
        "phpunit": "phpunit --verbose",
        "phpcs": "phpcs -p"
    }
}
